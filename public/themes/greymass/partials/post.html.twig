<article class="ui vertical stripe segment">
  <div class="ui middle aligned stackable grid container">
    <div class="row">
      <div class="eleven wide column">
        <h3 class="ui header">
          <a href="/{{ post.getCategory() }}/@{{ post.author }}/{{ post.permlink }}">
            {{ post.title }}
          </a>
          <div class="sub header">
            {{ "%datetime%" | trans({'%datetime%' : post.ts | date("d M Y")})}}
            - 
            {% for tag in post.getTags() %}
              {% if tag %}
              <a href="/tagged/{{ tag }}">
                #{{ tag }}
              </a>
              {% endif %}
            {% endfor %}
          </div>
        </h3>
        {{ post.html | raw }}
      </div>
      <div class="five wide right floated column">

      </div>
    </div>
  </div>
</article>