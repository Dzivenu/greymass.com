{% extends 'layout.html.twig' %}

{% block content %}
<div class="ui very padded basic segment">
  <div class="ui container">
    <div class="ui grid">
      <div class="row">
        <div class="column">
          <div class="ui huge dividing header">
            Posts tagged {{ category }}
          </div>
          <div class="ui very relaxed divided list">
          {% for post in posts %}
            <div class="item">
              <div class="content">
                  {{ "%datetime%" | trans({'%datetime%' : post.ts | date("M d, Y, H:ia e")})}}
                <div class="ui large header">
                  <a href="/{{ post.getCategory() }}/@{{ post.author }}/{{ post.permlink }}">
                    {{ post.title }}
                  </a>
                  <div>
                    {% for tag in post.getTags() %}
                      {% if tag %}
                      <a class="ui basic tiny label" href="/tagged/{{ tag }}">
                        {{ tag }}
                      </a>
                      {% endif %}
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}